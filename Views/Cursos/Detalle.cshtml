@model Parcial.Models.Curso
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Detalle del curso";

    Context.Session.SetString("UltimoCursoNombre", Model.Nombre);
    Context.Session.SetInt32("UltimoCursoId", Model.Id);

    var ultimoCursoNombre = Context.Session.GetString("UltimoCursoNombre");
    var ultimoCursoId = Context.Session.GetInt32("UltimoCursoId");
}

<h2>@Model.Nombre (@Model.Codigo)</h2>

<p><b>Créditos:</b> @Model.Creditos</p>
<p><b>Horario:</b> @Model.HorarioInicio - @Model.HorarioFin</p>
<p><b>Cupo máximo:</b> @Model.CupoMaximo</p>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (User.Identity.IsAuthenticated)
{
    <form asp-action="Inscribirse" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-success">Inscribirse</button>
    </form>
}
else
{
    <p><span class="text-muted">Inicia sesión para inscribirte.</span></p>
}

@if (!string.IsNullOrEmpty(ultimoCursoNombre) && ultimoCursoId.HasValue)
{
    <p>
        <a asp-action="Detalle" asp-route-id="@ultimoCursoId.Value">
            Volver al curso @ultimoCursoNombre
        </a>
    </p>
}